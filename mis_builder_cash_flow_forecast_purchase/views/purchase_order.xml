<odoo>

    <record id="purchase_order_form" model="ir.ui.view">
        <field
            name="name"
        >purchase.order.form in (mis_builder_cash_flow_forecast_purchase)</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    class="oe_stat_button"
                    type="object"
                    icon="fa-area-chart"
                    name="action_show_mis_forecast"
                    help="MIS Builder Cash Flow Forecast"
                    attrs="{'invisible': [('mis_cash_flow_forecast_line_count', '=', 0)]}"
                >
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_text">Cash Flow Forecast
                        </span>
                    </div>
                </button>
            </xpath>
            <field name="payment_term_id" position="after">
                <field name="forecast_uninvoiced_amount" invisible="1" />
            </field>
        </field>
    </record>

    <record id="purchase_order_tree" model="ir.ui.view">
        <field
            name="name"
        >purchase.order.tree in (mis_builder_cash_flow_forecast_purchase)</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree" />
        <field name="arch" type="xml">
            <field name="amount_untaxed" position="before">
                <field
                    name="forecast_uninvoiced_amount"
                    sum="Total Forecast Uninvoiced Amount"
                    widget="monetary"
                />
            </field>
        </field>
    </record>
</odoo>
