<odoo>

    <record model="ir.ui.view" id="res_config_settings_form_view">
        <field name="name">res.config.settings.form (in
            mis_builder_cash_flow_forecast_sale_blanket_order)</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@data-key='sale_management']//div[hasclass('o_settings_container')][1]"
                position="after"
            >
                <div class="row mt16 o_settings_container">
                    <div
                        class="col-12 col-lg-6 o_setting_box"
                        id="enable_sale_blanket_order_mis_cash_flow_forecast"
                    >
                        <div class="o_setting_left_pane">
                            <field
                                name="enable_sale_blanket_order_mis_cash_flow_forecast"
                            />
                        </div>
                        <div class="o_setting_right_pane">
                            <label
                                for="enable_sale_blanket_order_mis_cash_flow_forecast"
                            />
                            <span
                                class="fa fa-lg fa-building-o"
                                title="Values set here are company-specific."
                                aria-label="Values set here are company-specific."
                                groups="base.group_multi_company"
                                role="img"
                            />
                            <div class="text-muted">
                                Enable MIS Builder Cash Flow Gernerate Sale Blanket Order Forecast
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>


</odoo>
