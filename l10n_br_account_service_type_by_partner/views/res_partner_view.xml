<odoo>
    <record model="ir.ui.view" id="partner_form_view">
        <field
            name="name"
        >l10n_br_base.res.partner.form (in l10n_br_account_service_type_by_partner)</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="l10n_br_base.l10n_br_base_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='other_infos']" position="after">
                <group string="Service Type" name="service_type_partner">
                    <field
                        name="partner_service_type_ids"
                        string="Service Type by Partner"
                    >
                        <tree editable="bottom">
                            <field name="partner_id" invisible="1" />
                            <field name="service_type_id" />
                            <field name="product_id" />
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
